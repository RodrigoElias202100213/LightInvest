@model LightInvest.Models.ValidateCodeViewModel

@{
    ViewData["Title"] = "Validar Código";
}

<h2>Digite o Código de Redefinição</h2>

<form asp-action="ValidateCode" method="post">
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Código</label>
        <input asp-for="Code" class="form-control" required />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Validar Código</button>
</form>
