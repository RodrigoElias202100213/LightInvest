@{
	ViewData["Title"] = "Recuperação de Senha";
}

<div class="forgot-password-container">
	<h2>Recuperação de Senha</h2>

	<form method="post">
		<div asp-validation-summary="All" class="text-danger"></div>

		<div class="form-group">
			<label for="email">Email *</label>
			<input type="email" id="email" name="Email" class="form-control" required placeholder="Digite seu email" />
		</div>

		<button type="submit" class="btn btn-primary">Enviar Email de Recuperação</button>
	</form>

	<div class="extra-actions">
		<a href="@Url.Action("Login", "Account")">Voltar ao Login</a>
	</div>
</div>