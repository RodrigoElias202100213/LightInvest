@model EnergyConsumptionViewModel

@{
    ViewData["Title"] = "Consumo de Energia";
}

<div class="container">
    <div class="sidebar">
        <div class="steps">
            <div class="step">1</div>
            <div class="step">2</div>
            <div class="step">3</div>
            <div class="step">4</div>
        </div>
    </div>
    <div class="content">
        <h1>Formulário Consumo de Energia</h1>

        <form asp-controller="EnergySimulation" asp-action="Simulation" method="post">
            <div class="section">
                <h5>1. Consumo Médio Horário: Segunda a Sexta</h5>
                <div class="horario">
                    @for (int i = 0; i < 24; i++)
                    {
                        <div class="hora">
                            <span>@i h</span>
                            <input type="number" asp-for="ConsumoDiaSemana[i]" min="0" step="0.01" value="@(Model.ConsumoDiaSemana[i] > 0 ? Model.ConsumoDiaSemana[i].ToString("F2") : "")" />
                        </div>
                    }
                </div>
            </div>

            <div class="section">
                <h5>2. Consumo Médio Horário: Feriados/Fim de Semana</h5>
                <div class="horario">
                    @for (int i = 0; i < 24; i++)
                    {
                        <div class="hora">
                            <span>@i h</span>
                            <input type="number" asp-for="ConsumoFimSemana[i]" min="0" step="0.01" value="@(Model.ConsumoFimSemana[i] > 0 ? Model.ConsumoFimSemana[i].ToString("F2") : "")" />
                        </div>
                    }
                </div>
            </div>

            <div class="section">
                <h5>3. Ocupação Mensal</h5>
                <div class="month-checkboxes">
                    @foreach (var mes in Enum.GetNames(typeof(Meses)))
                    {
                        <label>
                            <input type="checkbox" name="MesesOcupacao" value="@mes" @(Model.MesesOcupacao.Contains(mes) ? "checked" : "") />
                            @mes
                        </label>
                    }
                </div>
            </div>

            <div class="section">
                <h5>4. Estatísticas</h5>
                <p><strong>Segunda a sexta:</strong> média @Model.MediaSemana kWh por dia</p>
                <p><strong>Fim de semana:</strong> média @Model.MediaFimSemana kWh por dia</p>
                <p><strong>Base anual:</strong> média @Model.MediaAnual kWh por ano</p>
            </div>

            <div class="btn-container">
                <button type="submit" class="btn">Calcular</button>
                <a href="@Url.Action("Index", "Home")" class="btn">Cancelar</a>
                <a href="@Url.Action("SelecionarTarifa", "EnergySimulation")" class="btn">Seguinte</a>
            </div>
        </form>
    </div>
</div>
<script>
    document.querySelector('form').addEventListener('submit', function (event) {
        const inputs = document.querySelectorAll('input[type="number"]');

        inputs.forEach(input => {
            if (input.value.trim() === '') {
                input.value = '0';
            }
        });
    });
</script>


