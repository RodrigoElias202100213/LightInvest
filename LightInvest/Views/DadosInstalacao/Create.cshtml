@model DadosInstalacao

@{
    ViewData["Title"] = "Criar Dados de Instalação";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CidadeId" class="control-label"></label>
        <select asp-for="CidadeId" class="form-control" asp-items="ViewBag.Cidades"></select>
        <span asp-validation-for="CidadeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ModeloPainelId" class="control-label"></label>
        <input asp-for="ModeloPainelId" class="form-control" />
        <span asp-validation-for="ModeloPainelId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NumeroPaineis" class="control-label"></label>
        <input asp-for="NumeroPaineis" class="form-control" />
        <span asp-validation-for="NumeroPaineis" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConsumoPainel" class="control-label"></label>
        <input asp-for="ConsumoPainel" class="form-control" />
        <span asp-validation-for="ConsumoPainel" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Inclinacao" class="control-label"></label>
        <input asp-for="Inclinacao" class="form-control" />
        <span asp-validation-for="Inclinacao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Dificuldade" class="control-label"></label>
        <input asp-for="Dificuldade" class="form-control" />
        <span asp-validation-for="Dificuldade" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
