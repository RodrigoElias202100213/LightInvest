@model LightInvest.Models.DadosInstalacao

@{
    ViewData["Title"] = "Criar Dados de Instalação";
}

<h2>Criar Dados de Instalação</h2>

<form asp-action="Create">
    <div class="form-group">
        <label for="ModeloId">Modelo do Painel Solar</label>
        <select id="ModeloId" name="ModeloId" class="form-control">
            <option value="">Selecione um modelo</option>
            @foreach (var modelo in ViewBag.ModelosPainel)
            {
                <option value="@modelo.Id">@modelo.Modelo</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="PotenciaId">Potência do Painel Solar</label>
        <select id="PotenciaId" name="PotenciaId" class="form-control">
            <option value="">Selecione a potência</option>
            <!-- As opções de potência serão preenchidas via AJAX -->
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Criar</button>
</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // Quando o modelo for alterado, carrega as potências
        $('#ModeloId').change(function () {
            var modeloId = $(this).val();

            if (modeloId) {
                // Requisição AJAX para carregar as potências
                $.getJSON('/ControllerName/GetPotenciasByModelo', { modeloId: modeloId }, function (potencias) {
                    // Limpa a lista de potências antes de preencher com os novos dados
                    $('#PotenciaId').empty();
                    $('#PotenciaId').append('<option value="">Selecione a potência</option>');

                    // Preenche o dropdown de potências
                    $.each(potencias, function (index, potencia) {
                        $('#PotenciaId').append('<option value="' + potencia.Id + '">' + potencia.Potencia + '</option>');
                    });
                });
            } else {
                // Caso nenhum modelo seja selecionado, limpar a lista de potências
                $('#PotenciaId').empty();
                $('#PotenciaId').append('<option value="">Selecione a potência</option>');
            }
        });
    </script>
}
