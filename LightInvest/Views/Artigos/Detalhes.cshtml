@model LightInvest.Models.Artigo
@{
    ViewData["Title"] = Model.Titulo;
}

<div class="container">
    <h1 class="display-4">@Model.Titulo</h1>
    <p class="text-muted">Publicado em @Model.DataPublicacao.ToShortDateString()</p>

    @if (!string.IsNullOrEmpty(Model.ImagemUrl))
    {
        <img src="@Model.ImagemUrl" class="img-fluid rounded mb-3" alt="@Model.Titulo">
    }

    <p>@Model.Conteudo</p>

    <div class="mt-4">
        <a asp-controller="Artigos" asp-action="ListarPorCategoria" asp-route-categoria="@Model.Categoria" class="btn btn-outline-dark">⬅ Voltar</a>
    </div>
</div>
